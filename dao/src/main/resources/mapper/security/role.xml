<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace用作标识mapper的唯一，通常包名+文件名 -->
<mapper namespace="com.cjt.dao.security.IRoleDAO">
    <insert id="insert" parameterType="com.cjt.entity.model.security.Role" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO role (name)
        VALUES (#{name})
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE FROM role
        WHERE id = #{id}
    </delete>

    <update id="updateById" parameterType="com.cjt.entity.model.security.Role">
        UPDATE role
        <trim prefix="SET" suffix="WHERE id = #{id}">
            `name` = #{name}
        </trim>
    </update>

    <select id="getList" resultType="com.cjt.entity.model.security.Role" parameterType="com.cjt.entity.dto.RoleDTO">
        SELECT
        `id`,
        `name`
        FROM
        role
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="name!=null">AND `name` like CONCAT('%',#{name},'%')</if>
        </trim>
        <if test="offset!=null and offset!=0">
            LIMIT #{start}, #{offset}
        </if>
    </select>

    <select id="getListCount" resultType="int" parameterType="com.cjt.entity.dto.RoleDTO">
        SELECT COUNT(*)
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="name!=null and name!=''">AND `name` like CONCAT('%',#{name},'%')</if>
        </trim>
        FROM role
    </select>

    <select id="getById" resultType="com.cjt.entity.model.security.Role" parameterType="int">
        SELECT
            `id`,
            `name`
        FROM
            role
        WHERE id = #{id}
    </select>

    <select id="listRoleByUserId" resultType="com.cjt.entity.model.security.Role" parameterType="int">
        SELECT
            `id`,
            `name`
        FROM
            role
        WHERE id IN (
            SELECT role_id
            FROM
                user_roles
            WHERE
                user_id = #{userId}
        )
    </select>
</mapper>